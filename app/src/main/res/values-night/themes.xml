<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/back_dark_p</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/white_99</item>
        <item name="colorSecondaryVariant">@color/white_26</item>
        <item name="colorOnSecondary">@color/white_33</item>
        <!-- Additional brand color. -->
        <item name="colorTertiary">@color/white_66</item>
        <item name="colorOnTertiary">@color/back_dark_s</item>
        <item name="colorError">@color/red_dark</item>
        <item name="colorAccent">@color/blue_dark</item>
        <item name="color">@color/green_dark</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="MyCheckBoxRed" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/colorError</item>
        <item name="colorControlActivated">?attr/color</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/colorTertiary</item>
        <item name="colorControlActivated">?attr/color</item>
    </style>

    <style name="MyFab" parent="Theme.AppCompat.Light">
        <item name="android:src">@drawable/fab_add</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="Separator" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="background">?attr/colorOnSecondary</item>
    </style>
    <style name="MySpinner" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@color/back_dark_e</item>
    </style>

</resources>