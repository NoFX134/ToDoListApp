<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/back_light_p</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/black_99</item>
        <item name="colorSecondaryVariant">@color/black_26</item>
        <item name="colorOnSecondary">@color/black_33</item>
        <!-- Additional brand color. -->
        <item name="colorTertiary">@color/black_4D</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="importantColor">@color/red_light</item>
        <item name="colorBlue">@color/blue_light</item>
        <item name="doneColor">@color/green_light</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">?attr/colorBlue</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">?attr/colorBlue</item>
    </style>

    <style name="MyCheckBoxRed" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/importantColor</item>
        <item name="colorControlActivated">?attr/doneColor</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">?attr/colorTertiary</item>
        <item name="colorControlActivated">?attr/doneColor</item>
    </style>

    <style name="MyFab" parent="Theme.AppCompat.Light">
        <item name="android:src">@drawable/fab_add</item>
        <item name="backgroundTint">?attr/colorBlue</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="Separator" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="background">?attr/colorOnSecondary</item>
    </style>

    <style name="MySpinner" parent="Theme.AppCompat.Light">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>